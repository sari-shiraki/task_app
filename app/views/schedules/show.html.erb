<h1>スケジュール詳細</h1>

<table class="table-style">
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @schedule.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.allday? %>
        <p>○</p>
      <% end %>
    </td>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", schedules_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_schedule_path %></li>
    <li><%= link_to"スケジュールを削除", :schedule, method: :delete,data:{confirm:"本当に削除しますか"}%></li>
  </ul>
</div>

<%= render "shared/partial" %>