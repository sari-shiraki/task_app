<h3>スケジュール編集</h3>

<% if flash.notice %>
  <p class="notice error"><%= flash.notice %></p>
<% end %>

<%= render "shared/error", obj:@schedule %>

<%= form_for @schedule do |f| %>
  <table class="table-style">
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>
    <tr>
      <th><%= f.label :finish ,"終了日" %></th>
      <td><%= f.date_field :finish %></td>
    </tr>
    <tr>
      <th><%= f.label :allday ,"終日" %></th>
      <td class="allday-table">
        <%= f.check_box :allday %>終日の場合はチェックを入れます
      </td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "スケジュールの編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
    </ul>
  </div>
<% end %>  

<%= render "shared/partial" %>